<Page
    x:Class="TC2_RegistrationWizard.Page3"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TC2_RegistrationWizard"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.TopAppBar>
        <CommandBar HorizontalContentAlignment="Left" IsDynamicOverflowEnabled="False">
            <CommandBar.Content>
                <TextBlock Text="Page 3" Margin="12" FontSize="18"></TextBlock>
            </CommandBar.Content>
        </CommandBar>
    </Page.TopAppBar>
    
    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBox x:Name="tbEmail" Header="Email:" AcceptsReturn="False" Margin="10" />
        <TextBox x:Name="tbHomePage" Header="HomePage:" AcceptsReturn="False" Margin="10" />
    </StackPanel>

    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.PrimaryCommands>
                <AppBarButton x:Name="Save" Label="Save" Icon="Save" Click="Save_Click"></AppBarButton>
                <AppBarButton x:Name="Back" Label="Back" Icon="Back" Click="Back_Click"></AppBarButton>
                <AppBarButton x:Name="Next" Label="Next" Icon="Forward" IsEnabled="False"></AppBarButton>
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</Page>
