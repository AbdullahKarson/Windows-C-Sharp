<Page
    x:Class="TC2_RegistrationWizard.Page2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TC2_RegistrationWizard"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBox x:Name="tbAddress" Header="Address:" AcceptsReturn="False" Margin="10" />
        <TextBox x:Name="tbCity" Header="City:" AcceptsReturn="False" Margin="10" />
        <TextBox x:Name="tbPostalCode" Header="Postal Code:" AcceptsReturn="False" Margin="10" />
    </StackPanel>
</Page>
